/*Código para mostrar em dois displays de 7 segmentos o produto das entradas fornecidas pelo usuário.Conforme o número de vezes que o usuário aperta o botão, a entrada será um número de 0 a 9.Por exemplo, um clique corresponde ao número zero, dez cliques correspondem ao número nove.*/int produto; // Para guardar o resultado da multiplicaçãoint unidade; // Para guardar o dígito das unidadesint dezena; // Para guardar o dígito das dezenasint Botao_1 = 2; // A ideia aqui é relacionar esta variável ao pino 2 do Arduinoint estado_1; // Esta variável indica qual o estado lógico do botão 1int Botao_2 = 3; // Análogo ao que foi feito para o Botão 1int estado_2; // Esta variável indica qual o estado lógico do botão 2int valor_1 = 0; // Esta variável é incrementada conforme o botão 1 é pressionadoint valor_2 = 0; // Esta variável é incrementada conforme o botão 2 é pressionado//BCD 1   //ATENÇÃO: Este CI deve ser conectado ao display da direita (UNIDADES)int a1 = 4;int a2 = 5;int a3 = 6;int a4 = 7;//BCD 2   // ATENÇÃO: Este CI deve ser conectado ao display da esquerda (DEZENAS)int b1 = 8;int b2 = 9;int b3 = 10;int b4 = 11;void setup() {    pinMode(4,OUTPUT); // Definimos como saída as portas do Arduino que serão conectadas ao CIs  pinMode(5,OUTPUT);  pinMode(6,OUTPUT);  pinMode(7,OUTPUT);  pinMode(8,OUTPUT);  pinMode(9,OUTPUT);  pinMode(10,OUTPUT);  pinMode(11,OUTPUT);  pinMode(Botao_1, INPUT);  //Pino 2 do Arduino ligado ao Botão 1  pinMode(Botao_2, INPUT);  //Pino 3 do Arduino ligado ao Botão 2  writePonto(0);  // Inicia com o ponto desligado  }/* Esse setup define que as portas digitais de 4 a 11 donosso arduino atuarão como saída em nosso circuito*/void loop() {  leitura_1 = digitalRead(Botao_1);  leitura_2 = digitalRead(Botao_2);    if (leitura_1 == HIGH) {    if(valor_1 == 9){      valor_1 = 0;    else {      valor_1 ++;    }      }      }    if (leitura_2 == HIGH) {    if(valor_2 == 9){      valor_2 = 0;    else {      valor_2 ++;    }      }      }    produto = (valor_1 - 1)*(valor_2 - 1)  unidade = produto%10;  dezena = produto/10;    Display_1(unidade);  Display_2(dezena);  }void Display_1(int num){  // Esse é o display das UNIDADES  if(num == 0)//0000   {    digitalWrite(a1, LOW);     digitalWrite(a2, LOW);    digitalWrite(a3, LOW);    digitalWrite(a4, LOW);  }  if(num == 1)//0001  {    digitalWrite(a1, HIGH);    digitalWrite(a2, LOW);    digitalWrite(a3, LOW);    digitalWrite(a4, LOW);  }  if(num == 2)//0010  {    digitalWrite(a1, LOW);//0    digitalWrite(a2, HIGH);//1    digitalWrite(a3, LOW);//0    digitalWrite(a4, LOW);//0  }  if(num == 3)//0011  {    digitalWrite(a1, HIGH);//1    digitalWrite(a2, HIGH);//1    digitalWrite(a3, LOW);//0    digitalWrite(a4, LOW);//0  }  if(num == 4)//0100  {    digitalWrite(a1, LOW);//0    digitalWrite(a2, LOW);//0    digitalWrite(a3, HIGH);//1    digitalWrite(a4, LOW);//0  }  if(num == 5)//0101  {    digitalWrite(a1, HIGH);//1    digitalWrite(a2, LOW);//0    digitalWrite(a3, HIGH);//1    digitalWrite(a4, LOW);//0  }  if(num == 6)//0110  {    digitalWrite(a1, LOW);//0    digitalWrite(a2, HIGH);//1    digitalWrite(a3, HIGH);//1    digitalWrite(a4, LOW);//0  }  if(num == 7) //0111  {    digitalWrite(a1, HIGH);//1    digitalWrite(a2, HIGH);//1    digitalWrite(a3, HIGH);//1    digitalWrite(a4, LOW);//0  }  if(num == 8) //1000  {    digitalWrite(a1, LOW);//0    digitalWrite(a2, LOW);//0    digitalWrite(a3, LOW);//0    digitalWrite(a4, HIGH);//1  }  if(num == 9)//1001  {    digitalWrite(a1, HIGH);//1    digitalWrite(a2, LOW);//0    digitalWrite(a3, LOW);//0    digitalWrite(a4, HIGH);//1  }}void Display_2(int num) {   // Esse é o display das DEZENAS  if(num == 0)//0000  {    digitalWrite(b1, LOW);//0    digitalWrite(b2, LOW);//0    digitalWrite(b3, LOW);//0    digitalWrite(b4, LOW);//0  }  if(num == 1)//0001  {    digitalWrite(b1, HIGH