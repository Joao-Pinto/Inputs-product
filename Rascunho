int seven_seg_display[10][7] = {  { 1,1,1,1,1,1,0 },    // Dígito 0                                  { 0,1,1,0,0,0,0 },    // Dígito 1                                  { 1,1,0,1,1,0,1 },    // Dígito 2                                  { 1,1,1,1,0,0,1 },    // Dígito 3                                  { 0,1,1,0,0,1,1 },    // Dígito 4                                  { 1,0,1,1,0,1,1 },    // Dígito 5                                  { 1,0,1,1,1,1,1 },    // Dígito 6                                  { 1,1,1,0,0,0,0 },    // Dígito 7                                  { 1,1,1,1,1,1,1 },    // Dígito 8                                  { 1,1,1,0,0,1,1 }};   // Dígito 9/* Com o array acima, nós configuramos o display de sete segmentos paramostrar os dígitos de 0 a 9.*/int last_Button_State_1 = LOW; // A variável que guarda o último estado lógico do Botão 1int last_Button_State_2 = LOW; // A variável que guarda o último estado lógico do Botão 2long last_Debounce_Time_1 = 0; // Indica a última vez que o botão 1 foi pressionadolong Debounce_Delay = 50; // o tempo de processamento entre dois cliqueslong last_Debounce_Time_2 = 0; // Indica a última vez que o botão 2foi pressionadovoid loop() {  int leitura_1 = digitalRead(Botao_1);  int leitura_2 = digitalRead(Botao_2);    if (leitura_1 == HIGH) {    if (leitura_1 != last_Button_State_1) {   last_Debounce_Time_1 = millis();  }    if ((millis() – last_Debounce_Time_1) > debounceDelay) {    if (leitura_1 != estado_1) {      estado_1 = leitura_1    if (estado_1 == LOW) {      valor_1 ++;    }    }  } last_Button_State_1 = leitura_1;}void loop() {  leitura_1 = digitalRead(Botao_1);  leitura_2 = digitalRead(Botao_2);  if (leitura_1 == HIGH) {    valor_1 = 0;    tempo_1 = 40;    while (tempo_1 > 0) {      tempo --;      delay(100);      if (leitura_1 == HIGH) {        valor_1 ++;      }    }  }  if (leitura_2 == HIGH) {    valor_2 = 0;    tempo_2 = 40;    while (tempo_2 > 0) {      tempo --;      delay(100);      if (leitura_2 == HIGH) {        valor_2 ++;      }    }  }  produto = valor_1*valor_2  unidade = produto%10;  dezena = produto/10;    Display_1(unidade);  Display_2(dezena);    valor_1 = 0;  valor_2 = 0;}